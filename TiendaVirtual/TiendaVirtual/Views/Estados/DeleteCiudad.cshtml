@model TiendaVirtual.Data.Entities.Ciudad

@{
    ViewData["Title"] = "DeleteCiudad";
}

<h1>Borrar</h1>

<h3>Estas seguro de eliminar esta ciudad?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>


    <form asp-action="DeleteCiudad" mt-3>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Estado.Id"/>
        <input type="submit" value="Borrar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model.Estado.Id" class="btn btn-outline-success">Regresar</a>
    </form>
</div>
